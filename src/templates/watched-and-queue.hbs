 {{#each this}}
<li class="gallery-item">
 <div class="img-card-wrapper">
     <img class="img-card" src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="{{title}}" data-id="{{id}}" onError="this.onerror=null;this.src='https://st.depositphotos.com/2185383/4533/v/950/depositphotos_45330099-stock-illustration-cinema-concept-poster.jpg;'" />
      <div class="card-overlay">
        <button type="button" id="overlay-btn-add-to-watched" data-id="{{id}}" class="button overlay-btn-add-to-watched">add to watched</button>
        <button type="button" id="overlay-btn-add-to-queue" data-id="{{id}}" class="button overlay-btn-add-to-queue">add to queue</button>
        <button type="button" id="open-modal-film-btn" data-id="{{id}}" class="button open-modal-film-btn">about</button>
      </div>
 </div>
      <div class="movie-card">
         <p class="subscribe-item-movie">{{title}}</p>
         <span class="subscribe-item card-genres">{{genres}}</span>&nbsp;
         <span class="subscribe-item"> &#8402 &nbsp;{{release_date}} </span>
         <span class="film-vote">{{vote_average}}</span>
      </div>
</li>
{{/each}}